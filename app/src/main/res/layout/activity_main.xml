<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@color/colorPrimaryDark" android:id="@+id/imageView"
            android:layout_weight="1"
    />
    <TextView
            android:text=""
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:text="Load Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button_load"/>
        <Button
                android:layout_weight="1"
                android:text="Predict"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button_predict"/>
    </LinearLayout>

</LinearLayout>